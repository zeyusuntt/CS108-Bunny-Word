<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".PageManagementActivity">

        <edu.stanford.cs108.bunnyworld.PageManagementView
            android:id="@+id/page_catalog_view"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.7" />
<!--    <LinearLayout-->
<!--        android:id="@+id/page_catalog_view"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0sp"-->
<!--        android:layout_weight="0.7"-->
<!--        android:orientation="horizontal" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.15"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/create"
            android:layout_width="91sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:onClick="onCreatePage"
            android:text="CREATE" />

        <Button
            android:id="@+id/edit"
            android:layout_width="91sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:onClick="onEditPage"
            android:text="EDIT" />

        <Button
            android:id="@+id/delete"
            android:layout_width="91sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:onClick="onDeletePage"
            android:text="DELETE" />

        <Button
            android:id="@+id/undo"
            android:layout_width="91sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:onClick="onUndoPages"
            android:text="UNDO" />

        <Button
            android:id="@+id/main_back"
            android:layout_width="91sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:onClick="onBack"
            android:text="BACK" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.15"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="91sp"
            android:layout_height="wrap_content"
            android:text="Page Name:"
            android:textSize="15sp"
            android:textColor="@color/purple_500"/>

        <EditText
            android:id="@+id/page_new_name"
            android:layout_width="95sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:textSize="11sp"/>

        <Button
            android:id="@+id/change_name"
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:onClick="onChangePageName"
            android:text="CHANGE NAME"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/set_first_page"
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:onClick="onSetFirstPage"
            android:text="SET FIRST PAGE"
            android:textSize="12sp"/>


    </LinearLayout>

</LinearLayout>