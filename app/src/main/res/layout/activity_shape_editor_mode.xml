<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".EditShapeActivity">
    
    <edu.stanford.cs108.bunnyworld.EditShapeView
        android:id="@+id/editShapeView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"/>

<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="0.7" />-->

    <!-- Shape Editor -->
    <GridLayout
        android:id="@+id/shapeEditor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-6dp"
        android:layout_weight="0.3"
        android:columnCount="6"
        android:rowCount="4">

        <!-- Column 0 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="0.25"
            android:layout_columnWeight="0.1"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:text="X:"
            android:textSize="11sp"/>

        <EditText
            android:id="@+id/x"
            android:layout_width="70sp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="0.25"
            android:layout_column="0"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="-10dp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:text="5.0"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="0.25"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:text="Y:"
            android:textSize="11sp"/>

        <EditText
            android:id="@+id/y"
            android:layout_width="70sp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="0.25"
            android:layout_column="0"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="-10dp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:text="5.0"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="0.25"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:text="Width:"
            android:textSize="11sp"/>

        <EditText
            android:id="@+id/width"
            android:layout_width="50sp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="0.25"
            android:layout_column="0"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="-10dp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:text="200.0"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="0.25"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Height:"
            android:textSize="11sp"/>

        <EditText
            android:id="@+id/height"
            android:layout_width="50sp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="0.25"
            android:layout_column="0"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="-10dp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:text="200.0"
            android:textSize="11sp" />

        <!-- Column 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="0.25"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:text="Red:"
            android:textColor="#FF0000"
            />


        <SeekBar
            android:id="@+id/red"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="0.25"
            android:layout_column="1"
            android:layout_marginLeft="35dp"
            android:max="255"
            android:progress="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="0.25"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:text="Green:"
            android:textColor="#00FF00" />


        <SeekBar
            android:id="@+id/green"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="0.25"
            android:layout_column="1"
            android:layout_marginLeft="35dp"
            android:max="255"
            android:progress="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="0.25"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:text="Blue:"
            android:textColor="#0000FF" />


        <SeekBar
            android:id="@+id/blue"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="0.25"
            android:layout_column="1"
            android:layout_marginLeft="35dp"
            android:max="255"
            android:progress="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="0.25"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:text="Line Width:"
            android:textSize="11sp"/>

        <EditText
            android:id="@+id/lineWidth"
            android:layout_width="53sp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="0.25"
            android:layout_column="1"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="-10dp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textSize="12sp" />


        <!-- Column 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="0.25"
            android:layout_column="2"
            android:layout_gravity="left"
            android:layout_marginLeft="-5dp"
            android:text="Text:"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/text"
            android:layout_width="100sp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="0.25"
            android:layout_column="2"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="-10dp"
            android:hint="Change text"
            android:inputType="text"
            android:maxLines="1"
            android:text=""
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="0.25"
            android:layout_column="2"
            android:layout_gravity="left"
            android:layout_marginLeft="-5dp"
            android:text="Font:"
            android:textSize="11sp"/>

        <Spinner
            android:id="@+id/fontSpinner"
            android:layout_width="114sp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="0.25"
            android:layout_column="2"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="-5dp"
            android:inputType="text"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="0.25"
            android:layout_column="2"
            android:layout_gravity="left"
            android:layout_marginLeft="-5dp"
            android:text="Font Size:"
            android:textSize="11sp"/>

        <EditText
            android:id="@+id/fontSize"
            android:layout_width="82sp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="0.25"
            android:layout_column="2"
            android:layout_marginStart="45dp"
            android:layout_marginTop="-10dp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="0.25"
            android:layout_column="2"
            android:layout_gravity="left"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="5dp"
            android:text="Font Style:"
            android:textSize="11sp"/>

        <Spinner
            android:id="@+id/fontStyleSpinner"
            android:layout_width="94sp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="0.25"
            android:layout_column="2"
            android:layout_marginStart="42dp"
            android:layout_marginTop="-5dp"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="11sp" />

        <!-- Column 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="0.25"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:text="Name:"/>

        <EditText
            android:id="@+id/shapeName"
            android:layout_width="60sp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="0.25"
            android:layout_column="3"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="-10dp"
            android:inputType="text"
            android:maxLines="1"
            android:text=""
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/visible"
            android:layout_width="90sp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="0.25"
            android:layout_column="3"
            android:checked="true"
            android:text="Visible" />

        <CheckBox
            android:id="@+id/movable"
            android:layout_width="90sp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="0.25"
            android:layout_column="3"
            android:checked="false"
            android:text="Movable" />

        <CheckBox
            android:id="@+id/animate"
            android:layout_width="90sp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="0.25"
            android:layout_column="3"
            android:checked="false"
            android:text="Animate" />

        <!-- Column 4 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="0.25"
            android:layout_column="4"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:text="Shape:" />

        <Spinner
            android:id="@+id/shapeSpinner"
            android:layout_width="110dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="0.25"
            android:layout_column="4"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="-5dp"
            android:textSize="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="0.25"
            android:layout_column="4"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:text="BGM:" />

        <Spinner
            android:id="@+id/bgmSpinner"
            android:layout_width="110dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="0.25"
            android:layout_column="4"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="-5dp"
            android:textSize="11dp" />

        <Button
            android:id="@+id/pasteButton"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="0.25"
            android:layout_column="4"
            android:layout_marginLeft="75dp"
            android:layout_marginBottom="-5dp"
            android:onClick="onPaste"
            android:text="Paste"
            android:textSize="16px" />

        <Button
            android:id="@+id/copyButton"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="0.25"
            android:layout_column="4"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="-5dp"
            android:onClick="onCopy"
            android:text="copy"
            android:textSize="16px" />

        <Button
            android:id="@+id/undoButton"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="0.25"
            android:layout_column="4"
            android:layout_marginLeft="5dp"
            android:onClick="onUndo"
            android:text="Undo"
            android:textSize="16px" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="0.25"
            android:layout_column="4"
            android:layout_marginLeft="75dp"
            android:onClick="onDelete"
            android:text="Delete"
            android:textSize="16px" />


        <!-- Column 5 -->
        <Button
            android:id="@+id/addButton"
            android:layout_width="58dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="0.25"
            android:layout_column="5"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="-5dp"
            android:backgroundTint="@color/black"
            android:onClick="onAdd"
            android:text="Add"
            android:textSize="16px" />

        <Button
            android:id="@+id/updateButton"
            android:layout_width="58dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="0.25"
            android:layout_column="5"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="-5dp"
            android:backgroundTint="@color/black"
            android:onClick="onUpdate"
            android:text="Update"
            android:textSize="16px" />

        <Button
            android:id="@+id/scriptButton"
            android:layout_width="58dp"
            android:layout_height="0dp"
            android:layout_rowWeight="0.25"
            android:layout_row="2"
            android:layout_column="5"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="-5dp"
            android:backgroundTint="@color/black"
            android:onClick="onScript"
            android:text="Script"
            android:textSize="16px" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="58dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="0.25"
            android:layout_column="5"
            android:layout_marginLeft="1dp"
            android:backgroundTint="@color/black"
            android:onClick="onBack"
            android:text="Back"
            android:textSize="16px" />

    </GridLayout>
</LinearLayout>
    